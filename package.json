{
  "name": "npmscriptsstarter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "sass": "sass/**",
    "js": "js/**",
    "html": "html/**"
  },
  "scripts": {
    "js": "browserify js/app.js -t babelify -o build/js/app.js",
    "sass": "node-sass sass/main.scss build/css/styles.css",
    "html": "cp -r html/ build/",
    "clean": "rm -r build/",
    "preview": "live-server --open=build/ --watch=build/ --ignore=**/*tmp-browserify*",
    "watch": "npm-watch",
    "predev": "mkdir -p build && run-p sass js html",
    "dev": "run-p preview watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "live-server": "^1.2.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.3.0"
  }
}
